{
  "name": "@mxenabled/web-widget-sdk",
  "version": "0.0.1",
  "description": "MX Web Widget SDK",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile && npm run bundle",
    "bundle": "rollup -c",
    "clean": "npm run clean:build && npm run clean:dist",
    "clean:build": "[ -d build ] && rm -r build || true",
    "clean:dist": "[ -d dist ] && rm -r dist || true",
    "compile": "npm run compile:sdk && npm run compile:test",
    "compile:sdk": "tsc --outDir build",
    "compile:test": "tsc --noEmit test/**/*.ts",
    "format": "npm run prettier -- -w",
    "prettier": "prettier src example test",
    "lint": "eslint src example test",
    "test:integration": "cypress run",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mxenabled/web-widget-sdk"
  },
  "license": "MIT",
  "dependencies": {
    "@mxenabled/widget-post-message-definitions": "^1.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babelify": "^10.0.0",
    "cypress": "^9.5.3",
    "eslint": "^8.11.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "rollup": "^2.70.1",
    "typescript": "^4.6.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-trailing-spaces": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  }
}
